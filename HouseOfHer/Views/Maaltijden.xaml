<!-- Bishmillah -->
<ContentControl x:Class="HouseOfHer.Views.Maaltijden"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Height="450" Width="600">
    <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="225"/>
                <RowDefinition Height="225"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock HorizontalAlignment="Center">Maaltijden</TextBlock>
            <Border CornerRadius="4" 
                    BorderBrush="#333333" 
                    BorderThickness="1"
                    Margin="10,0,10,10">
                <ListBox Name="Maaltijdenlijst" 
                        SelectionChanged="ListBox_SelectionChanged"
                        BorderThickness="0"
                        Background="Transparent"
                        MaxHeight="200"
                        MinHeight="200">
                </ListBox>
            </Border>
        </StackPanel>
        <StackPanel Grid.Column="0" 
                    Grid.Row="1"
                    VerticalAlignment="Top">
            <TextBlock>Maaltijdnaam:</TextBlock>
            <TextBox Name="NieuweMaaltijdNaam"
                     Style="{StaticResource TextBoxTheme}"
                     Margin="10,0,10,10"/>
            <TextBlock>Ingredienten (gescheiden door een komma):</TextBlock>
            <TextBox Name="NieuweMaaltijdIngrediënten"
                     Style="{StaticResource TextBoxTheme}"
                     Margin="10,0,10,10"/>
            <Button Content="Voeg Maaltijd Toe" 
                    Click="VoegMaaltijdToe_Click"
                    Style="{StaticResource SubmitButtonTheme}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock HorizontalAlignment="Center">Ingredienten</TextBlock>
            <Border CornerRadius="4" 
                    BorderBrush="#333333" 
                    BorderThickness="1"
                    Margin="10,0,10,10"
                    Height="200"
                    Width="280">
                <ContentControl Name="MaaltijdenControl"
                                MaxWidth="280"></ContentControl>
            </Border>
        </StackPanel>
    </Grid>
</ContentControl>
