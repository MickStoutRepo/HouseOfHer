<ContentControl x:Class="HouseOfHer.Views.Agenda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Height="450" Width="800">
    <Grid Background="white">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center">Datum:</TextBlock>
            <ComboBox ItemsSource="{Binding Dates}" 
                      SelectedItem="{Binding SelectedDate}" 
                      Width="200"
                      Margin="0,0,0,10"/>
            <TextBlock HorizontalAlignment="Center">Tijd:</TextBlock>
            <ComboBox ItemsSource="{Binding Times}" 
                      SelectedItem="{Binding SelectedTime}" 
                      Width="200"
                      Margin="0,0,0,10"/>
            <TextBlock HorizontalAlignment="Center">Agendapunt:</TextBlock>
            <TextBox Text="{Binding Text}"
                     Style="{StaticResource TextBoxTheme}"
                     Width="400"
                     Margin="0,0,0,40"/>
            <Button Command="{Binding SaveCommand}" Content="Save"
                    Style="{StaticResource SubmitButtonTheme}"/>
        </StackPanel>
    </Grid>
</ContentControl>
