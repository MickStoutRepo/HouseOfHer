<!-- Bishmillah -->
<Window x:Class="HouseOfHer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:HouseOfHer.Models"
        Title="Template" Height="1000" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:AgendaItem}">
            <StackPanel>
                <TextBlock Text="{Binding Date, StringFormat='{}{0:yyyy-MM-dd}'}" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding Tasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Key}" Margin="5,0"/>
                                <TextBlock Text="{Binding Value}" Margin="5,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Border CornerRadius="25" BorderBrush="#333333">
        <Border CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1">
                    <GradientStop Color="#28AFB0" 
                                  Offset="0.4"/>
                    <GradientStop Color="#FFA5AB" 
                                  Offset="0.95"/>
                </LinearGradientBrush>
            </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border
                    Margin="0,20,0,0" 
                    VerticalAlignment="Center">
                <Image Source="" 
                       Width="150" 
                       Height="75"/>
            </Border>
            <StackPanel Grid.Row="1" Grid.Column="0">
                <TextBlock>
                    <LineBreak/>
                    <LineBreak/>
                    <LineBreak/>
                </TextBlock>
                <RadioButton Content="Boodschappen" 
                             Height="50" 
                             Foreground="#efde93" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="Boodschappen"
                             x:Name="BoodschappenButton"/>
                <RadioButton Content="Maaltijden" 
                             Height="50" 
                             Foreground="#efde93" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="Maaltijden"
                             x:Name="MaaltijdenButton"/>
                <RadioButton Content="Agenda" 
                             Height="50" 
                             Foreground="#efde93" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"
                             Checked="Agenda"
                             x:Name="AgendaButton"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" 
                        HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource SettingsButtonTheme}"
                            Width="30" 
                            Height="30" 
                            BorderThickness="1" 
                            IsHitTestVisible="True"
                            Margin="0,10,10,0"
                            Panel.ZIndex="1"
                            Click="Instellingen_Click"
                            x:Name="InstellingenButton">
                        <fa:IconBlock Icon="Gear" Foreground="#FFA5AB" />
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="1" Content="-"
                            Style="{StaticResource SettingsButtonTheme}"
                            Width="30" 
                            Height="30"
                            FontWeight="Heavy"
                            FontSize="20"
                            Foreground="#FFA5AB"
                            BorderThickness="1"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,10,10,0"
                            Click="Minimaliseren_Click"
                            IsHitTestVisible="True"
                            Panel.ZIndex="1"
                            x:Name="MinimaliserenButton">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            <Button Grid.Row="0" Grid.Column="2" Content="X"
                    Style="{StaticResource CloseButtonTheme}"
                    Width="30" 
                    BorderThickness="1"
                    Height="30"
                    FontWeight="Heavy"
                    Foreground="#FFA5AB"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,10,10,0"
                    Click="Afsluiten_Click"
                    IsHitTestVisible="True"
                    Panel.ZIndex="1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                </Button>
                </Grid>
            </StackPanel>
            <Frame x:Name="MainFrame" 
                   Grid.Row="1" 
                   Grid.Column="1" 
                   NavigationUIVisibility="Hidden"/>
            <Grid Grid.Row="1" 
                  Grid.Column="1"
                  Height="900">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="550"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border BorderBrush="#333333" 
                        Grid.Row="0"
                        BorderThickness="1" 
                        Padding="20" 
                        Margin="0,25,25,25" 
                        CornerRadius="20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,1">
                                <GradientStop Color="#d7e9f4" 
                                              Offset="0.4"/>
                                <GradientStop Color="#f7f5f7" 
                                              Offset="0.95"/>
                        </LinearGradientBrush>
                        </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#333333" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5"/>
                    </Border.Effect>
                    
            </Border>
                <Grid Grid.Row="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,0,25,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="380"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0"
                                Height="250"
                                VerticalAlignment="Center"
                                Margin="0,0,0,0">
                        <Viewbox Height="300"
                                 HorizontalAlignment="Left"
                                 Margin="20,0,0,0">
                            <Calendar
                                SelectedDatesChanged="myCalendar_SelectedDatesChanged"
                                x:Name="CalendarControl"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Background="Transparent"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Height="200"
                                Margin="0,0,0,0">
                            </Calendar>
                        </Viewbox>
                    </StackPanel>
                    <Border Grid.Column="1"
                            BorderBrush="#333333"
                            BorderThickness="1"
                            CornerRadius="10"
                            Height="230"
                            Width="350">
                    <StackPanel Height="250">
                    <TextBlock x:Name="DateViewTextBlock"
                               VerticalAlignment="Top"
                               Style="{StaticResource TextBlockThemeHeader}">Text</TextBlock>
                    <TextBlock x:Name="DateViewContentBlock"
                               VerticalAlignment="Top"
                               Style="{StaticResource TextBlockTheme}">Text</TextBlock>
                    </StackPanel>
                        </Border>
                </Grid>
                <Border BorderBrush="#333333" 
                        Grid.Row="1"
                        BorderThickness="1" 
                        Padding="20" 
                        Margin="0,25,25,25" 
                        CornerRadius="20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,1">
                            <GradientStop Color="#d7e9f4" 
                                          Offset="0.4"/>
                            <GradientStop Color="#f7f5f7" 
                                          Offset="0.95"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#333333" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5"/>
                    </Border.Effect>
                    <ContentControl x:Name="MainContent"/>
                    </Border>
            </Grid>
        </Grid>
    </Border>
    </Border>
</Window>

